// Defaults ---------------------------
html
	font-size 10px
body
	font-family fontMain
	font-size 1.8rem
	line-height 1.5
	color blue
	background cream
	
// Layout ---------------------------
.wrapper
	siteWidth()
	
section
	padding 10rem 0
	
// Hero ---------------------------
.hero
	background teal
	text-align center
	padding 28rem 0
	
// Header ---------------------------
