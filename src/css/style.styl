@import '_normalize.styl'
@import 'jeet'
@import '_variables.styl'
@import '_typography.styl'

// edit()

// Defaults ---------------------------
html
	font-size 10px
body
	-webkit-font-smoothing antialiased
	font-family fontMain
	font-size 1.8rem
	line-height 1.5
	color blue
	background cream
	

// Layout ---------------------------
.wrapper
	siteWidth()
	
section
	padding 10rem 0
	
// Hero ---------------------------
.hero
	background teal
	text-align center
	padding 28rem 0
	height 100vh
	
// Header ---------------------------
.site-header
	background teal
	border 1px solid
	padding 3rem 0
	.wrapper
		display flex
		justify-content space-between
		align-items center
		// border 1px solid gray
.site-logo
	// background steelblue
	width 180px
	height 82px
	#logo-group
		fill cream
		transform translateX(-170px)
		transition all 0.2s ease-in-out
	#parachute
		fill tealPale
	#proposal, #fix
		opacity 0
		transition all 0.2s ease-in-out
		transition-delay 0.2s
	&:hover #logo-group
		transform translateX(0px)	
	&:hover #proposal,
	&:hover #fix
		opacity 1	

// Main nav ---------------------------
.main-nav
	ul
		list-style none
		margin 0
		padding 0
		display flex
		justify-content flex-end
		li
			margin-left 4rem
			a
				font-size 2.2rem
				padding 1.5rem
				text-decoration none
				color tealPale
				font-family fontSecondary
				&:hover
					color cream
		.cta a
			color teal
			background tealPale
			padding 1rem 2rem
			doubleBorder(2px, tealPale, 4px, teal)
			fullRadius(8px)
			&:hover
					background teal
					color cream
					
// Optins ---------------------------
.optin
	text-align center
.optin-bottom
	background teal
	color cream
	
.description
	box()
	padding 10rem 17.03125%