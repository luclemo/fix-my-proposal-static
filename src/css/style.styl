@import '_normalize.styl'
@import 'jeet'
@import '_variables.styl'
@import '_typography.styl'

// edit()

// Defaults ---------------------------
html
	font-size 10px
body
	-webkit-font-smoothing antialiased
	font-family fontMain
	font-size 1.8rem
	line-height 1.5
	color blue
	background cream
	

// Layout ---------------------------
.wrapper
	siteWidth()
	
section
	padding 10rem 0
	
// Hero ---------------------------
.hero
	background teal
	text-align center
	padding 28rem 0
	
// Header ---------------------------
.site-header
	background teal
	border 1px solid
	.wrapper
		display flex
		justify-content space-between
		align-items center
.site-logo 
	background red

// Main nav ---------------------------
.main-nav
	ul
		list-style none
		margin 0
		padding 0
		display flex
		justify-content flex-end
		li
			margin-left 4rem
			a
				padding 2rem
				text-decoration none
				color cream
				font-family fontSecondary		
// Optins ---------------------------
.optin
	text-align center
.optin-bottom
	background teal
	color cream
	
.description
	box()
	padding 10rem 17.03125%