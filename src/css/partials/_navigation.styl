// Main nav ---------------------------
.main-nav-list
	list-style none
	margin 0
	padding 0
	display flex
	justify-content flex-end
	li
		margin 0
		a
			font-size 1.375rem
			padding 0 1.5em
			text-decoration none
			color paleBlue
			font-family fontSecondary
			border none
			&:hover
				color cream
				background none
	.cta a
		color blue
		background paleBlue
		padding 0.4em 0.6em
		double-border(2px, paleBlue, 4px, blue)
		full-radius(8px)
		+breakpoint(minphablet)
			padding 0.6em 1em
		&:hover
				color paleBlue
				