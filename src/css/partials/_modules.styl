// Hero ---------------------------
.hero
	background blue url('img/bg-crash-1.jpg') center/cover no-repeat
	text-align center
	padding vert-space 0
	padding-bottom 0
	position relative
	overflow hidden
	display flex
	flex-flow column nowrap
	+breakpoint(minphablet)
		padding vert-space*3 0
		padding-bottom 0
.mask
	+breakpoint(minphablet)
		margin-top vert-space
	path
		fill cream
.hero-logo
	display block
	margin auto
	+breakpoint(minphablet)
		width 60%
		height auto
.tagline
	color paleBlue
	fz-large()

// Header ---------------------------
.site-header
	background blue
	border 1px solid
	padding 1.875rem 0
	.wrapper
		display flex
		justify-content space-between
		align-items center
.site-header-logo
	width 180px
	height 82px
	.logo-group
		transform translateX(-170px)
		transition all 0.2s ease-in-out
	.proposal, .fix
		opacity 0
		transition all 0.2s ease-in-out
		transition-delay 0.2s
	&:hover .logo-group
		transform translateX(0px)	
	&:hover .proposal,
	&:hover .fix
		opacity 1
		
// Optins ---------------------------
.optin
	text-align center
.optin-dark
	background blue url('img/bg-crash-2.jpg') center/cover no-repeat
	color cream
	padding vert-space 0
	+breakpoint(mintablet)
		padding vert-space*2.5
	margin-bottom 0
	.module-title
		color cream
		
// about ----------------------------
.about-content
	+breakpoint(mintablet)
		display flex
		flex-flow row nowrap
		justify-content space-between
.about-image
	align-self flex-start
	border-bottom none
	.profile-pic
		display block
		margin auto
		border-radius 50%
		max-width 200px
		transition-all()
		+breakpoint(minphablet)
			max-width 240px
	&:hover .profile-pic
		border-radius 0
.about-text {
	flex-basis 65%;
}

// Description Module  ------------------
.description
	position relative
	margin-bottom 6rem
	.boxed
		box()
		padding 2em 1em 5em 1em
		+breakpoint(minlaptop)
			padding 3em 6em 5em 6em
	.callout
		position absolute
		display inline-block
		+breakpoint(laptop)
			fz-large()
		+breakpoint(minlaptop)
			fz-xlarge()
	.callout-large
		left 50%
		transform translate(-50%, -60%)
		+breakpoint(laptop)
			min-width 70%
		+breakpoint(minlaptop)
			width auto

